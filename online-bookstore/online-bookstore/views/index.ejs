<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookstore</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <h1>Creative Online Bookstore Name</h1>
    
    <nav aria-label="Main Navigation">
        <ul> 
            <li><a href="#home">Home</a></li>
            <li><a href="#books">Books</a></li>
            <li><a href="#cart">Cart</a></li>
            <li><a href="#login">Login</a></li>
        </ul>
    </nav>

    <section class="banner">
        <h2>Welcome to Creative Online Bookstore Name!</h2>
    </section>

    <section id="home">
        <p>Discover the best books for you!</p>
    </section>

    <form action="/books" method="GET" class="search-bar">
        <input type="text" name="query" placeholder="Search for books...">
        <button type="submit">Search</button>
    </form>

    <section id="books" class="books">
        <h2>Featured Books</h2>
        <% if (books.length > 0) { %>
            <% books.forEach(book => { %>
                <div class="book">
                    
                    <img src="<%= book.cover || '/images/placeholder.jpg' %>" alt="<%= book.title || 'Book Cover' %>">
                    <h3><%= book.title || 'Unknown Title' %></h3>
                    <p><%= book.author || 'Unknown Author' %></p>
                    <p>Price: $<%= book.price || 'N/A' %></p>
                    
                    <a href="/books/<%= book.id %>">View Details</a>
                    
                    <button>Add to Cart</button>
                </div>
            <% }) %>
        <% } else { %>
            <p>No books available at the moment.</p>
        <% } %>
    </section>
    
</body>
</html>
